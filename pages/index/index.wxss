.container {
  display: flex;
  flex-direction: column;
}

/* <!-- 定位和搜索开始 --> */

.userinfo {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
}

.userinfo-i {
  height: 100rpx;
  width: 35%;
  margin-left: 30rpx;
}

.userinfo-i image {
  height: 38rpx;
  width: 30rpx;
  margin: 0 auto;
}

.userinfo .userinfo-t {
  font-size: 32rpx;
  color: #666;
  margin-left: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.userinfo-right {
  height: 60rpx;
  line-height: 60rpx;
  background-color: #ededed;
  border: 1rpx solid #999;
  border-radius: 25rpx 25rpx 25rpx 25rpx;
}

.userinfo-right input {
  font-size: 24rpx;
  text-align: center;
  color: green;
  vertical-align: middle;
}

.search {
  position: relative;
  margin-right: 10rpx;
}

.search input {
  border: 1px solid #ccc;
  border-radius: 6px;
  height: 30px;
  font-size: 30rpx;
  padding-left: 30rpx;
  margin: 0 auto
}



/* <!-- 定位和搜索结束 --> */

